{

  "description": "Le panier universel qui vous permet de commander sur tous les sites en 1 seule fois!",
  "manifest_version": 2,
  "name": "Cesta",
  "version": "0.0.0.1",
  "icons": {
    "48": "icons/icon48.png"
  },
  
  "permissions": [
    "activeTab"
  ],

"browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html"
  }

}

